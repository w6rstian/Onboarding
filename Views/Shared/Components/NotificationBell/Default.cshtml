@model int

<div id="notification-bell" style="cursor: pointer; position: relative;">
    <i class="fa fa-bell"></i>
    @if (Model > 0)
    {
        <span class="badge bg-danger text-white" style="position: absolute; top: -5px; right: -10px;">@Model</span>
    }
</div>
<div id="notifications-dropdown" style="display: none; position: absolute; top: 80%; background: white; border: 1px solid #ccc; padding: 10px; z-index: 1000;"></div>