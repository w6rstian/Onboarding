@model Onboarding.Models.Test

@{
    ViewData["Title"] = $"Edytuj test dla kursu: {Model.Course?.Name}";
}

<h1>@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="card shadow-lg rounded-3 border-0 p-4">
        <h4 class="fw-bold text-primary">Edytuj test</h4>
        <hr />

        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label for="Name">Nazwa</label>
                <input type="text" class="form-control" id="Name" name="Name" asp-for="Name" required />
            </div>

            <div class="form-group mt-3">
                <label for="TaskId">Zadanie</label>
                <select class="form-control" id="TaskId" name="TaskId" asp-for="TaskId">
                    <option value="">Wybierz zadanie</option>
                    @foreach (var task in ViewBag.Tasks as SelectList)
                    {
                        <option value="@task.Value">@task.Text</option>
                    }
                </select>
            </div>

            <div class="mt-4 d-flex justify-content-center gap-4">
                <button type="submit" class="btn btn-primary btn-lg px-4">Zapisz</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg px-4">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
