@model Onboarding.Models.Test

@{
    ViewData["Title"] = "Test Details";
}

<h1>Szczegóły Testu</h1>

<div>
    <h4>Informacje o teście</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nazwa testu</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Zadania</dt>
        <dd class="col-sm-10">
            @if (ViewBag.Tasks != null)
            {
                <ul class="list-group list-group-flush">
                    @foreach (var task in ViewBag.Tasks as IEnumerable<string>)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @task
                        </li>
                    }
                </ul>
            }
            else
            {
                <span class="text-muted">Brak przypisanych zadań</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>
