@model IEnumerable<Onboarding.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
}

<h2>Powiadomienia</h2>

<table class="table">
    <thead>
        <tr>
            <th>Message</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var notification in Model)
        {
            <tr>
                <td>@notification.Message</td>
                <td>@notification.CreatedAt.ToLocalTime()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@notification.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@notification.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@notification.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>