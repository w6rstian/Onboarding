@model User;
@{
    ViewData["Title"] = "Tworzenie Konta Pracownika";
}
<head>
    <link rel="stylesheet" href="~/css/colors.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color: var(--bg-color);">

    <div class="container mt-5">
        <h2 class="text-center mb-4">Tworzenie konta nowego pracownika</h2>
        <form asp-action="CreateEmployee" asp-controller="HR" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Imię</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Wprowadź imię">
            </div>
            <div class="mb-3">
                <label for="lastname" class="form-label">Nazwisko</label>
                <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Wprowadź nazwisko">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Adres email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Wprowadź adres email">
            </div>

            <button type="submit" class="btn btn-primary">Utwórz konto</button>
        </form>
    </div>
</body>