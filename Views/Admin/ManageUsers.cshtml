@model List<Onboarding.Models.User>

@{
    ViewData["Title"] = "Zarządzanie użytkownikami";
}

<h2>Zarządzanie użytkownikami</h2>


<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Wyszukaj użytkownika..." value="@ViewData["SearchTerm"]">
        <button type="submit" class="btn btn-primary">Szukaj</button>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edytuj</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm" onclick="return confirm('Czy na pewno chcesz usunąć tego użytkownika?');">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
